{
    "version": "0.1.0",
    "name": "my-org/core",
    "description": "Shared Domain Logic Package.",
    "type": "laravel-package",
    "autoload": {
        "psr-4": {
            "MyOrg\\Core\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\MyOrg\\Core\\": "tests/"
        }
    },
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/database": "^12.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^11.5"
    },
    "scripts": {
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}